<PropertyList>

 <path>Models/gmtr-bb.ac</path>
 <texture-path>Models/Textures</texture-path>

    <animation>
            <type>noshadow</type>
            <object-name>GMTR</object-name>
    </animation>

    <animation include="Instrument-Light4.xml">
            <object-name>Aiguille</object-name>
    </animation>

    <animation include="Instrument-Light3.xml">
            <object-name>Cadran</object-name>
    </animation>

    <animation>
            <type>rotate</type>
            <object-name>Aiguille</object-name>
            <property>/accelerations/pilot/z-accel-fps_sec[0]</property>
            <factor>-0.69932</factor>
            <axis>
                    <x>-1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>

</PropertyList>