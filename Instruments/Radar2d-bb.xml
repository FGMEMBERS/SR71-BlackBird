<PropertyList>

	<path>Models/radar-base.ac</path>
	<texture-path>Models/Textures</texture-path>
        <panel>
        <path>Aircraft/SR71-BlackBird/Instruments/EHSI-panel2d.xml</path>
        <bottom-left>
            <x-m>0.0</x-m>
            <y-m>-0.07741</y-m>
            <z-m>-0.0774098</z-m>
        </bottom-left>
        <bottom-right>
            <x-m>0.0</x-m>
            <y-m>0.07741</y-m>
            <z-m>-0.0774098</z-m>
        </bottom-right>
        <top-left>
            <x-m>0.00</x-m>
            <y-m>-0.07741</y-m>
            <z-m>0.0774098</z-m>
        </top-left>
 </panel>




    <animation include="Instrument-Light3.xml">
            <object-name>Radar-range-ComBde</object-name>
    </animation>

    <animation>
            <type>rotate</type>
            <object-name>Radar-range-Com</object-name>
            <property>/instrumentation/radar/range</property>
            <interpolation>
                    <entry>
                            <ind>10</ind>
                            <dep>0</dep>
                    </entry>
                    <entry>
                            <ind>20</ind>
                            <dep>60</dep>
                    </entry>
                    <entry>
                            <ind>40</ind>
                            <dep>120</dep>
                    </entry>
            </interpolation>
            <center>
                    <x-m>0</x-m>
                    <y-m>-0.0639756</y-m>
                    <z-m>-0.0636857</z-m>
            </center>
            <axis>
                    <x>-1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>

    <animation>
            <type>select</type>
            <object-name>Temoin-RefCt-Actif</object-name>
            <condition>
                            <equals>
                                    <property>/systems/refuel/contact</property>
                                    <value>1</value>
                            </equals>
            </condition>
    </animation>


</PropertyList>