<PropertyList>

 <path>Models/clock.ac</path>
 <texture-path>Models/Textures</texture-path>



        <model>
                <name>Bouton</name>
                <path>Aircraft/SR71-BlackBird/Instruments/Bouton_pt-Nord.xml</path>
                <offsets>
                        <x-m>0.0161728</x-m>
                        <y-m>-0.026</y-m>
                        <z-m>-0.026</z-m>
                        <pitch-deg>0</pitch-deg>
                </offsets>
        </model>

        <animation include="Instrument-Light4.xml">
                <object-name>SecondHand</object-name>
                <object-name>MinuteHand</object-name>
                <object-name>HourHand</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>Cadran</object-name>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>SecondHand</object-name>
                <property>instrumentation/clock/indicated-sec</property>
                <factor>6</factor>
                        <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>MinuteHand</object-name>
                <property>instrumentation/clock/indicated-min</property>
                <factor>6</factor>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                        </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>HourHand</object-name>
                <property>instrumentation/clock/indicated-hour</property>
                <factor>6</factor>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>

</PropertyList>


