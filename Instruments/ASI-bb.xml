    <animation>
            <type>rotate</type>
            <object-name>Index</object-name>
            <property>/instrumentation/airspeed-indicator/landing-speed</property>
            <interpolation>
                    <entry>
                            <ind>0</ind>
                            <dep>0</dep>
                    </entry>
                    <entry>
                            <ind>80</ind>
                            <dep>37</dep>
                    </entry>
                    <entry>
                            <ind>100</ind>   <!--45 deg = 50-->
                            <dep>45</dep>
                    </entry>
                    <entry>
                            <ind>150</ind>
                            <dep>90</dep>
                    </entry>
                    <entry>
                            <ind>200</ind>
                            <dep>135</dep>
                    </entry>
            </interpolation>
            <axis>
                    <x>-1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>





<!-- ***********************************KNOTS Indicator***************************************-->
    <animation>
            <type>rotate</type>
            <object-name>Aiguille</object-name>
            <object-name>Knot-Masque</object-name>
            <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
            <interpolation>
                    <entry>
                            <ind>0</ind>
                            <dep>0</dep>
                    </entry>
                    <entry>
                            <ind>80</ind>  <!--45 deg = 50-->
                            <dep>37</dep>
                    </entry>
                    <entry>
                            <ind>100</ind>
                            <dep>45</dep>
                    </entry>
                    <entry>
                            <ind>150</ind>
                            <dep>90</dep>
                    </entry>
                    <entry>
                            <ind>200</ind>     <!--32 deg = 100-->
                            <dep>135</dep>
                    </entry>
                    <entry>
                            <ind>300</ind>
                            <dep>167</dep>
                    </entry>
                    <entry>
                            <ind>400</ind>
                            <dep>199</dep>
                    </entry>
                    <entry>
                            <ind>800</ind>
                            <dep>327</dep>
                    </entry>

                    <entry>
                            <ind>3000</ind>
                            <dep>327</dep>
                    </entry>


            </interpolation>
            <axis>
                    <x>-1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>






    <!--******************MACH Indicator******************************************************-->

    <animation>
            <type>select</type>
            <object-name>Mach-Masque</object-name>
            <condition>
                <and>
                    <less-than>
                        <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
                        <value>850</value>
                    </less-than>
                    <greater-than>
                        <property>velocities/mach</property>
                        <value>1.4</value>
                    </greater-than>
                </and>
            </condition>
    </animation>
    <!-- Must follow the needle -->
    <animation>
            <type>rotate</type>
            <object-name>Mach</object-name>
            <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
            <interpolation>
                    <entry>
                            <ind>0</ind>
                            <dep>0</dep>
                    </entry>
                    <entry>
                            <ind>300</ind>
                            <dep>0</dep>
                    </entry>
                    <entry>
                            <ind>800</ind>
                            <dep>160</dep>
                    </entry>

                    <entry>
                            <ind>975</ind>
                            <dep>160</dep>
                    </entry>
            </interpolation>
            <axis>
                    <x>-1</x>
                    <y>0</y>
                    <z>0</z>
            </axis>
    </animation>

