<PropertyList>



    <name>Panel Hotspots</name>
    <background>Aircraft/SR71-BlackBird/Panels/Textures/transparent-bg.rgb</background>
    <w>512</w>
    <h>512</h>
    <y-offset>0</y-offset>


    <instruments>
        <instrument>
                <name>Control</name>
                <x>256</x>
                <y>256</y>
                <w>512</w>
                <h>512</h>
                <w-base>1024</w-base>
                <h-base>1024</h-base>
                <actions>
                    <action>
                        <name>refuel on</name>
                        <button>0</button>
                        <x>-300</x>
                        <y>00</y>
                        <w>500</w>
                        <h>400</h>
                        <binding>
                            <property>/controls/flight/op-refuel</property>
                            <command>property-assign</command>
                            <value>1</value>
                        </binding>
                    </action>
                    <action>
                        <name>refuel off</name>
                        <button>1</button>
                        <x>-300</x>
                        <y>00</y>
                        <w>500</w>
                        <h>400</h>
                        <binding>
                            <property>/controls/flight/op-refuel</property>
                            <command>property-assign</command>
                            <value>0</value>
                        </binding>
                    </action>
                </actions>
        </instrument>
    </instruments>

</PropertyList>



