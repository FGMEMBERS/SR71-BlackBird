<PropertyList>

 <path>Models/Temoin-FuelLowEng.ac</path>
 <texture-path>Models/Textures</texture-path>

 	<animation>
		<type>noshadow</type>
		<object-name>Temoin</object-name>
	</animation>





	<model>
		<name>Bezel</name>
		<path>Aircraft/SR71-BlackBird/Instruments/Temoin-2Base.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

	<animation>
		<type>select</type>
		<object-name>Temoin2MActif</object-name>
		<condition>
			<equals>
				<property><!----></property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Temoin2-Actif</object-name>
		<condition>
			<equals>
				<property>/surface-positions/refueling-pos-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Temoin-Eng</object-name>
		<condition>
			<equals>
				<property>/instrumentation/annunciator/refuel-pump</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Temoin1-Actif</object-name>
		<condition>
			<equals>
				<property><!----></property>
				<value>1.0</value>
			</equals>
		</condition>
	</animation>


	<animation>
		<type>select</type>
		<object-name>Temoin1MActif</object-name>
		<condition>
				<less-than>
					<property>/consumables/fuel/tank[0]/level-gal_us</property>
					<value>0</value>
				</less-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Temoin-Low</object-name>
		<condition>
				<less-than>
					<property>/consumables/fuel/tank[0]/level-gal_us</property>
					<value>0</value>
				</less-than>
		</condition>
	</animation>



</PropertyList>
