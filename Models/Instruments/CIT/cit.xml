<PropertyList>

	<path>cit.ac</path>

	<animation>
		<type>noshadow</type>
		<object-name>EGT</object-name>
	</animation>





	<animation>
		<object-name>Needle_L</object-name>
		<object-name>Needle_R</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.80</red>
			<green>0.40</green>
			<blue>0.30</blue>
		</emission>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</diffuse>
		<ambient>
			<red>01</red>
			<green>1</green>
			<blue>1</blue>
		</ambient>
		<specular>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</specular>
		<shininess>20</shininess>
	</animation>

	<animation>
		<object-name>Cadran</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.60</red>
			<green>0.30</green>
			<blue>0.20</blue>
		</emission>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</diffuse>
		<ambient>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</ambient>
		<specular>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</specular>
		<shininess> 32</shininess>
	</animation>

	<animation>
		<type>select</type>
		<object-name>OFF</object-name>
		<condition>
			<less-than>
				<property>/systems/electrical/outputs/instr-ignition-switch</property>
				<value>27</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Needle_L</object-name>
		<property>/fdm/jsbsim/propulsion/cit</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>75</dep>
			</entry>
			<entry>
				<ind>500</ind>
				<dep>304</dep>
			</entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle_R</object-name>
		<property>/fdm/jsbsim/propulsion/cit</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>75</dep>
			</entry>
			<entry>
				<ind>500</ind>
				<dep>304</dep>
			</entry>
		</interpolation>
		<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
		</axis>
	</animation>

</PropertyList>