<PropertyList>

 <path>alt-bb.ac</path>

        <animation>
                <object-name>Aiguille</object-name>
				<type>material</type>
				<emission>
					<factor-prop>controls/lighting/instruments-norm</factor-prop>
					<red>0.80</red>
					<green>0.40</green>
					<blue>0.30</blue>
				</emission>
				<diffuse>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
				</diffuse>
				<ambient>
					<red>01</red>
					<green>1</green>
					<blue>1</blue>
				</ambient>
				<specular>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
				</specular>
				<shininess> 20</shininess>
        </animation>

        <animation>
                <object-name>Ft-m</object-name>
                <object-name>Ft-dm</object-name>
                <object-name>Ft-minus</object-name>
				<object-name>Cadran</object-name>
				<object-name>PA-cc</object-name>
                <object-name>PA-dc</object-name>
                <object-name>PA-un</object-name>
                <object-name>PA-di</object-name>
				<object-name>Tambour</object-name>
				<type>material</type>
				<emission>
					<factor-prop>controls/lighting/instruments-norm</factor-prop>
					<red>0.60</red>
					<green>0.30</green>
					<blue>0.20</blue>
				</emission>
				<diffuse>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
				</diffuse>
				<ambient>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
				</ambient>
				<specular>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
				</specular>
				<shininess> 32</shininess>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>Aiguille</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>-0.36</factor>
                <axis>
                        <x>1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>Ft-m</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>0.0001</factor>
                <step>1000</step>
                <scroll>1</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <condition>
                        <not>
                                <less-than>
                                        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                                        <value>0</value>
                                </less-than>
                        </not>
                </condition>
                <type>select</type>
                <object-name>Ft-dm</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        </animation>

        <animation>
                <condition>
                                <less-than>
                                        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                                        <value>0</value>
                                </less-than>
                </condition>
                <type>select</type>
                <object-name>Ft-minus</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>Ft-dm</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>0.00001</factor>
                <step>10000</step>
                <scroll>1</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>BTN</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>1000</factor>
                <center>
                        <x-m>0</x-m>
                        <y-m>-0.0397</y-m>
                        <z-m>-0.0379</z-m>
                </center>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>
		
		<animation>
			<type>pick</type>
			<object-name>BTN</object-name>
			<action>
				<button>0</button>
				<repeatable>true</repeatable>
				<interval-sec>0.1</interval-sec>
				<binding>
					<command>property-adjust</command>
					<property>/instrumentation/altimeter/setting-inhg</property>
					<step>0.01</step>
					<min>26.0</min>
					<max>33.0</max>
					<wrap>false</wrap>
				</binding>
			</action>
			<action>
				<button>1</button>
				<repeatable>true</repeatable>
				<interval-sec>0.1</interval-sec>
				<binding>
					<command>property-adjust</command>
					<property>/instrumentation/altimeter/setting-inhg</property>
					<step>-0.01</step>
					<min>26.0</min>
					<max>33.0</max>
					<wrap>false</wrap>
				</binding>
			</action>
			<action>
				<button>4</button>
				<repeatable>true</repeatable>
				<interval-sec>0.1</interval-sec>
				<binding>
					<command>property-adjust</command>
					<property>/instrumentation/altimeter/setting-inhg</property>
					<step>-0.01</step>
					<min>26.0</min>
					<max>33.0</max>
					<wrap>false</wrap>
				</binding>
			</action>
			<action>
				<button>3</button>
				<repeatable>true</repeatable>
				<interval-sec>0.1</interval-sec>
				<binding>
					<command>property-adjust</command>
					<property>/instrumentation/altimeter/setting-inhg</property>
					<step>0.01</step>
					<min>26.0</min>
					<max>33.0</max>
					<wrap>false</wrap>
				</binding>
			</action>
		</animation>



        <animation>
                <type>textranslate</type>
                <object-name>PA-cc</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>10</factor>
                <step>0.01</step>
                <scroll>0.000001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>PA-dc</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>1</factor>
                <step>0.1</step>
                <scroll>0.00001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>PA-un</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>0.1</factor>
                <step>1</step>
                <scroll>0.0001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>PA-di</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>0.01</factor>
                <step>10</step>
                <scroll>0.001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>Tambour</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>0.36</factor>
                <center>
                        <x-m>-0.00852861</x-m>
                        <y-m>0</y-m>
                        <z-m>0</z-m>
                </center>
                <axis>
                        <x>0</x>
                        <y>1</y>
                        <z>0</z>
                </axis>
        </animation>



</PropertyList>