<?xml version="1.0"?>


<PropertyList>



 <sim include="Help/BlackBird-help.xml" >
        <description>SR-71 BlackBird</description>
        <author>Gerard ROBIN</author>
        <status>alpha, "GPL Copyright"</status>
        <version>0.1</version>
        <flight-model>jsb</flight-model>
        <startup>
                <splash-texture>Aircraft/SR71-BlackBird/splash3-BB.rgb</splash-texture>
        </startup>
        <flight-model>jsb</flight-model>
        <aero>sr71-new</aero>
        <model>
            <path archive="y">Aircraft/SR71-BlackBird/Models/BlackBird-model.xml</path>
            <controls>
                <chute>0</chute>
            </controls>
        </model>
        <sound>
                    <audible>true</audible>
                    <path>Aircraft/SR71-BlackBird/Sounds/f16-sound.xml</path>
        </sound>
        <virtual-cockpit archive="y">true</virtual-cockpit>




        <number-views type="int" archive="y">7</number-views>
            <!--  z position long. val-faible=avance val-forte=recule -->
            <!--  y position haut. val-faible=descent val-forte=monte -->
        <view>
                    <internal archive="y">true</internal>
                    <config>
                            <!-- x/y/z == right/up/back -->
                            <x-offset-m archive="y">0</x-offset-m>
                            <y-offset-m archive="y">1.55</y-offset-m>
                            <z-offset-m archive="y">-13.60</z-offset-m>
                            <pitch-offset-deg archive="y">-18.0</pitch-offset-deg>
                            <default-field-of-view-deg type="double">70.0</default-field-of-view-deg>
                    </config>
        </view>
        <view n="1">
        <config>
            <z-offset-m type="double" archive="y">-40.0</z-offset-m>
        </config>
        </view>


        <view n="101">
                <name>Cockpit View</name>
                <type>lookfrom</type>
                <internal archive="y">true</internal>
                <config>
                        <from-model type="bool">true</from-model>
                        <from-model-idx type="int">0</from-model-idx>
                        <ground-level-nearplane-m type="double">0.05f</ground-level-nearplane-m>
                        <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
                        <default-pitch-deg type="double">0</default-pitch-deg>
                        <default-heading-deg type="double">0</default-heading-deg>
                        <front-direction-deg type="double">0</front-direction-deg>
                        <front-left-direction-deg type="double">45</front-left-direction-deg>
                        <left-direction-deg type="double">90</left-direction-deg>
                        <back-left-direction-deg type="double">135</back-left-direction-deg>
                        <back-direction-deg type="double">180</back-direction-deg>
                        <back-right-direction-deg type="double">225</back-right-direction-deg>
                        <right-direction-deg type="double">270</right-direction-deg>
                        <front-right-direction-deg type="double">315</front-right-direction-deg>
                        <x-offset-m archive="y">0.0</x-offset-m>
                        <y-offset-m archive="y">1.40</y-offset-m>
                        <z-offset-m archive="y">-11.90</z-offset-m>
                        <pitch-offset-deg>0</pitch-offset-deg>
                        <default-field-of-view-deg>75</default-field-of-view-deg>
                </config>
        </view>


        <current-view>
                <field-of-view type="double">70.0</field-of-view>
        </current-view>
            <chase-distance-m>-35</chase-distance-m>

        <systems>
                <autopilot>
                        <path>Aircraft/SR71-BlackBird/System/autopilot.xml</path>
            </autopilot>

        <electrical>
            <path>Aircraft/Generic/generic-electrical.xml</path>
        </electrical>
        </systems>


    </sim>

    <input>
        <keyboard>
            <key n="100">
                <name>d</name>
                <desc>Toggle Canopy</desc>
                    <binding>
                            <command>property-toggle</command>
                            <property>/fdm/jsbsim/fcs/canopy-cmd-norm</property>
                    </binding>
            </key>
            <key n="70">
                <name>F</name>
                <desc>Refuel On/Off</desc>
                    <binding>
                            <command>nasal</command>
                            <script>
                                    consumable.refuel();
                            </script>
                    </binding>
            </key>

            <key n="10">
                <name>Ctrl-j</name>
                <desc>Braking Chute Deploy</desc>
                <binding>
                        <property>sim/model/controls/chute</property>
                        <command>property-assign</command>
                        <value>1</value>
                </binding>
        </key>
        <key n="106">
                <name>j</name>
                <desc>Braking Chute Reload</desc>
                <binding>
                        <property>sim/model/controls/chute</property>
                        <command>property-assign</command>
                        <value>0</value>
                </binding>
                <binding>
                        <property>/fdm/jsbsim/fcs/chute-switch-once</property>
                        <command>property-assign</command>
                        <value>0</value>
                </binding>
        </key>
        </keyboard>
    </input>

    <controls>

        <!-- Start with the Parking Brake on -->

        <gear>
        <brake-parking type="double">1.0</brake-parking>
        </gear>

    </controls>


    <engines>
        <engine n="0">
                    <running>true</running>
        </engine>
        <engine n="1">
                    <running>true</running>
        </engine>
    </engines>


    <consumables>
        <fuel>
            <tank n="0">
            <level-gal_us archive="y">3000</level-gal_us>
            </tank>
            <tank n="1">
            <level-gal_us archive="y">3000</level-gal_us>
            </tank>
            <tank n="2">
            <level-gal_us archive="y">4500</level-gal_us>
            </tank>
        </fuel>
    </consumables>
    <!--<fdm><jsbsim>
        <fcs>
            <chute-switch-once>1</chute-switch-once>
        </fcs>
    </jsbsim></fdm>-->


    <nasal>
            <electrical>
                <file>Aircraft/SR71-BlackBird/System/electrical.nas</file>
            </electrical>
            <switch>
                <file>Aircraft/SR71-BlackBird/System/blackbird.nas</file>
            </switch>
            <!--<aar>
                <file>Aircraft/Generic/aar.nas</file>   later on will replace partly specific refuel.nas
            </aar>-->
            <consumable>
                    <file>Aircraft/SR71-BlackBird/System/refuel.nas</file>
            </consumable>
    </nasal>

</PropertyList>


